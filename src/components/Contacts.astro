<style lang="scss">
    @use '@sbsys/sb-scss' as sb;

    footer {
        @include sb.bg-color(base, 70);
        @include sb.gap(all space lg);
        @include sb.padding(all space md);
        @include sb.rounded(all space xs);
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }

    .address,
    .contacts {
        @include sb.flex;
        @include sb.gap(all space lg);

        h3 {
            @include sb.font(family title, size xl);
            @include sb.font-color(secondary, 20);
        }

        p,
        span,
        a {
            @include sb.font-color(primary, 20);
        }

        a {
            @include sb.font(size 3xl);
            @include sb.interactable(250ms, 1.1, 0.9);
        }

        iframe {
            @include sb.rounded(all space xs);
            aspect-ratio: 19 / 9;
            filter: invert(90%);
        }
    }

    ul {
        @include sb.flex(row, center, center);
        @include sb.gap(all space md);
        @include sb.padding(x space md);
    }

    .copyright {
        @include sb.flex(row, center, center);
        @include sb.gap(all space xs);
    }
</style>
